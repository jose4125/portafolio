          </div>
          <script type="text/javascript">var addthis_config = {"data_track_addressbar":true};</script>
          <script type="text/javascript" src="//s7.addthis.com/js/300/addthis_widget.js#pubid=jose4125"></script>
          <!-- AddThis Button END -->
        </div>
        <div class="large-3 columns">
          <ul class="inline-list right contFollow">
            <li></li>
            <li>
              <span>Follow me</span>
                <a class="addthis_button_twitter_follow" addthis:userid="jd4125"></a>
                <a class="addthis_button_linkedin_follow" addthis:userid="josedavidlombana"></a>
                <a class="addthis_button_google_follow" addthis:userid="107616955910551901241"></a>
              <script type="text/javascript" src="//s7.addthis.com/js/300/addthis_widget.js#pubid=xa-50967f6b452e735b"></script>
